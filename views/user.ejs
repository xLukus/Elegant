<%- include('../partials/navbar') %>
    <%- include('../partials/flash') %>
        <link rel="icon" type="image/x-icon" href="/pictures/favicon.png">
        <div
            style="width: 100%; height: 100px; display: flex; text-align: center; align-content: center; align-self: center; margin-top: 100px;">
            <h1 style="width: 100%; text-align: center;font-size: 50px;">My Account</h1>
        </div>
        <div id="vtor" style="width: 100%;  display: flex; justify-content: center; align-items: center;">
            <div style="width: 200px; height: 250px; -webkit-box-shadow: -1px 2px 21px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: -1px 2px 21px 0px rgba(0,0,0,0.75);
            box-shadow: -1px 2px 21px 0px rgba(0,0,0,0.75)">
                <h2 style="margin-bottom: 100px; margin-left: 10px;">
                    <%= user.username %>
                </h2>
                <ul
                    style="display: flex; justify-content:center; align-items: start; flex-direction: column; text-align: start;">
                    <li><a href="/:<%= user.id %>/orders">Orders</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </div>
            <div
                style="display: flex; justify-content: center; align-items: center; flex-direction: column; width: 50%;">

                <form action="/user/<%= user.id  %>" method="POST"
                    style="display: flex; justify-content: center; align-items: center; flex-direction: column; width: 60%;">
                    <Label for="name" style="text-align: start; width: 100%;">Username</Label>
                    <input type="text" id="name" name="name" style="width: 100%;" value="<%= user.username %>" required>
                    <Label for="email" style="width: 100%;">Email</Label>
                    <input type="email" id="email" name="email" value="<%=user.email  %>" style="width: 100%;" required>
                    <h2 style="width: 100%; margin-top: 50px;">Password</h2>
                    <label for="oldpassword" style="width: 100%;">Old Password</label>
                    <input type="text" name="oldpassword" id="oldpassword" style="width: 100%;" required>
                    <label for="newpassword" style="width: 100%;">New Password</label>
                    <input type="text" name="newpassword" id="newpassword" style="width: 100%;" required>
                    <label for="retypepassword" style="width: 100%;">Retype Password</label>
                    <input type="text" name="retypepassword" id="retypepassword" style="width: 100%;" required>
                    <button class="add" style="margin: 100px 0;">Save Changes</button>
                </form>
            </div>
        </div>
        <%- include('../partials/footer') %>

            <style>
                .footera {
                    color: white;
                }

                * {
                    padding: 0;
                    margin: 0;
                }

                @media (min-width:300px) and (max-width: 650px) {
                    #vtor {
                        flex-direction: column-reverse;
                    }

                    form {
                        width: 100% !important;
                    }
                }
            </style>